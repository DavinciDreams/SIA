# Example environment variables for SIA

# Vector DB selection: "faiss" or "pinecone"
SIA_VECTOR_DB=faiss  # Vector database backend

# Pinecone configuration
SIA_PINECONE_API_KEY=your-pinecone-api-key  # Pinecone API key
SIA_PINECONE_ENV=us-east1-gcp  # Pinecone environment region

# Persistent storage paths
SIA_MEMORY_STORAGE_PATH=./sia_data/memories.json  # Path for memory storage
SIA_ANALYSIS_REPORTS_PATH=./sia_data/analysis_reports  # Path for analysis reports
SIA_PR_RESULTS_PATH=./sia_data/pr_results  # Path for PR results

# LLM provider: "openai", "huggingface", "openrouter", "anthropic", or "lmstudio"
SIA_LLM_PROVIDER=openai  # LLM provider

# OpenAI configuration
SIA_OPENAI_API_KEY=your-openai-api-key  # OpenAI API key
SIA_OPENAI_MODEL=gpt-3.5-turbo  # OpenAI model name

# Hugging Face configuration
SIA_HF_API_KEY=your-hf-api-key  # Hugging Face API key
SIA_HF_MODEL=gpt2  # Hugging Face model name

# OpenRouter configuration
SIA_OPENROUTER_API_KEY=your-openrouter-api-key  # OpenRouter API key
SIA_OPENROUTER_MODEL=openrouter/openai/gpt-3.5-turbo  # OpenRouter model name

# Anthropic configuration
SIA_ANTHROPIC_API_KEY=your-anthropic-api-key  # Anthropic API key
SIA_ANTHROPIC_MODEL=claude-3-haiku-20240307  # Anthropic model name

# LM Studio configuration
SIA_LMSTUDIO_API_BASE_URL=http://localhost:1234/v1  # LM Studio API base URL
SIA_LMSTUDIO_MODEL=TheBloke/Mistral-7B-Instruct-v0.2-GGUF  # LM Studio model name

# API authentication
SIA_API_KEY=changeme  # API key for authenticating SIA API requests

# Encryption key for memory encryption (Fernet key, base64-encoded)
SIA_ENCRYPTION_KEY=your-fernet-key  # Used for encrypting memory data

# Standard database URL (if using an external DB)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname  # Database connection URL